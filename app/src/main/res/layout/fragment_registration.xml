<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color3"
    tools:context=".UI.Outer.RegistrationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background_color1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".8">

        </View>
    </LinearLayout>
    <ImageView
        android:id="@+id/arrowBack"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:scaleType="fitXY"
        android:src="@drawable/header"
        app:layout_constraintTop_toBottomOf="@id/arrowBack" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@drawable/card_shape1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="Register"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editetext_shape1"
            android:hint="Name"
            android:padding="@dimen/_6sdp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColorHint="@color/btn_color3"
            android:textColor="@color/btn_color3"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editetext_shape1"
            android:hint="Email Or Phone"
            android:padding="@dimen/_6sdp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColorHint="@color/btn_color3"
            android:textColor="@color/btn_color3"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editetext_shape1"
            android:hint="Password"
            android:padding="@dimen/_6sdp"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColorHint="@color/btn_color3"
            android:textColor="@color/btn_color3"/>
        <androidx.appcompat.widget.AppCompatEditText
           android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editetext_shape1"
            android:hint="DOB    ../../.."
            android:drawableEnd="@drawable/baseline_calendar_month_24"
            android:padding="@dimen/_6sdp"
            android:inputType="date"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColorHint="@color/btn_color3"
            android:textColor="@color/btn_color3"
            android:layout_marginBottom="@dimen/_10sdp"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/btn_shape2"
        android:ems="9"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/text_color1"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="Already have an account?"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:textColor="@color/f_color1"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>